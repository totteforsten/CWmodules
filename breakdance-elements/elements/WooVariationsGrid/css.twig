{% set selector = '%%SELECTOR%%' %}

{# Container #}
{{ selector }} .bde-woo-variations-grid-container {
    {% if design.layout.width %}
    width: {{ design.layout.width.number }}{{ design.layout.width.unit }};
    {% endif %}
    {% if design.layout.border_radius %}
    border-radius: {{ design.layout.border_radius.number }}{{ design.layout.border_radius.unit }};
    {% endif %}
    {% if design.layout.background %}
    background: {{ design.layout.background }};
    {% endif %}
}

{{ selector }} .bde-woo-variations-grid-body {
    {% if design.layout.max_height %}
    max-height: {{ design.layout.max_height.number }}{{ design.layout.max_height.unit }};
    {% endif %}
}

{# Header #}
{% if design.header.background %}
{{ selector }} .bde-woo-variations-grid-header {
    background: {{ design.header.background }};
}
{% endif %}

{{ selector }} .bde-header-cell {
    {% if design.header.text_color %}
    color: {{ design.header.text_color }};
    {% endif %}
    {% if design.header.font_size %}
    font-size: {{ design.header.font_size.number }}{{ design.header.font_size.unit }};
    {% endif %}
    {% if design.header.font_weight %}
    font-weight: {{ design.header.font_weight }};
    {% endif %}
    {% if design.header.padding %}
    padding: {{ design.header.padding.number }}{{ design.header.padding.unit }};
    {% endif %}
}

{# Rows #}
{% if design.rows.background %}
{{ selector }} .bde-row {
    background: {{ design.rows.background }};
}
{% endif %}

{% if design.rows.hover_background %}
{{ selector }} .bde-row:hover {
    background: {{ design.rows.hover_background }};
}
{% endif %}

{% if design.rows.alternate_background %}
{{ selector }} .bde-row:nth-child(even) {
    background: {{ design.rows.alternate_background }};
}
{% endif %}

{{ selector }} .bde-cell {
    {% if design.rows.text_color %}
    color: {{ design.rows.text_color }};
    {% endif %}
    {% if design.rows.font_size %}
    font-size: {{ design.rows.font_size.number }}{{ design.rows.font_size.unit }};
    {% endif %}
    {% if design.rows.padding %}
    padding: {{ design.rows.padding.number }}{{ design.rows.padding.unit }};
    {% endif %}
}

{# Stock Badge #}
{% if design.stock.in_stock_background or design.stock.in_stock_color %}
{{ selector }} .bde-badge-success {
    {% if design.stock.in_stock_background %}
    background: {{ design.stock.in_stock_background }};
    {% endif %}
    {% if design.stock.in_stock_color %}
    color: {{ design.stock.in_stock_color }};
    {% endif %}
}
{% endif %}

{% if design.stock.out_of_stock_background or design.stock.out_of_stock_color %}
{{ selector }} .bde-badge-danger {
    {% if design.stock.out_of_stock_background %}
    background: {{ design.stock.out_of_stock_background }};
    {% endif %}
    {% if design.stock.out_of_stock_color %}
    color: {{ design.stock.out_of_stock_color }};
    {% endif %}
}
{% endif %}

{# Quantity Selector #}
{% if design.quantity.background %}
{{ selector }} .bde-qty-wrapper {
    background: {{ design.quantity.background }};
}
{% endif %}

{% if design.quantity.button_background or design.quantity.button_color %}
{{ selector }} .bde-qty-btn {
    {% if design.quantity.button_background %}
    background: {{ design.quantity.button_background }};
    {% endif %}
    {% if design.quantity.button_color %}
    color: {{ design.quantity.button_color }};
    {% endif %}
}
{% endif %}

{% if design.quantity.input_color %}
{{ selector }} .bde-qty-input {
    color: {{ design.quantity.input_color }};
}
{% endif %}

{# Add to Cart Button #}
{{ selector }} .bde-cart-btn {
    {% if design.button.background %}
    background: {{ design.button.background }};
    {% endif %}
    {% if design.button.text_color %}
    color: {{ design.button.text_color }};
    {% endif %}
    {% if design.button.font_size %}
    font-size: {{ design.button.font_size.number }}{{ design.button.font_size.unit }};
    {% endif %}
    {% if design.button.font_weight %}
    font-weight: {{ design.button.font_weight }};
    {% endif %}
    {% if design.button.border_radius %}
    border-radius: {{ design.button.border_radius.number }}{{ design.button.border_radius.unit }};
    {% endif %}
    {% if design.button.padding %}
    padding: {{ design.button.padding.number }}{{ design.button.padding.unit }};
    {% endif %}
}

{% if design.button.hover_background or design.button.hover_text_color %}
{{ selector }} .bde-cart-btn:hover:not(:disabled) {
    {% if design.button.hover_background %}
    background: {{ design.button.hover_background }};
    {% endif %}
    {% if design.button.hover_text_color %}
    color: {{ design.button.hover_text_color }};
    {% endif %}
}
{% endif %}

{% if design.button.success_background %}
{{ selector }} .bde-cart-btn.bde-success {
    background: {{ design.button.success_background }};
}
{% endif %}
