{% set container = design.container %}
{% set progressBar = design.progress_bar %}
{% set icon = design.icon %}
{% set typography = design.typography %}

{# Container Styles #}
%%SELECTOR%% .fs-counter-wrapper {
  {% if container.background %}
    background: {{ container.background }};
  {% endif %}
  {% if container.padding.padding_top %}
    padding-top: {{ container.padding.padding_top.style }};
  {% endif %}
  {% if container.padding.padding_right %}
    padding-right: {{ container.padding.padding_right.style }};
  {% endif %}
  {% if container.padding.padding_bottom %}
    padding-bottom: {{ container.padding.padding_bottom.style }};
  {% endif %}
  {% if container.padding.padding_left %}
    padding-left: {{ container.padding.padding_left.style }};
  {% endif %}
  {% if container.borders %}
    {{ container.borders.style }}
  {% endif %}
}

%%SELECTOR%% .fs-counter-content {
  {% if container.gap %}
    gap: {{ container.gap.style }};
  {% endif %}
}

{# Progress Bar Styles #}
%%SELECTOR%% .fs-progress-track {
  {% if progressBar.height %}
    height: {{ progressBar.height.style }};
  {% endif %}
  {% if progressBar.background %}
    background: {{ progressBar.background }};
  {% endif %}
  {% if progressBar.border_radius %}
    border-radius: {{ progressBar.border_radius.style }};
  {% endif %}
}

%%SELECTOR%% .fs-progress-fill {
  {% if progressBar.fill_color %}
    background: {{ progressBar.fill_color }};
  {% endif %}
  {% if progressBar.border_radius %}
    border-radius: {{ progressBar.border_radius.style }};
  {% endif %}
}

{# Icon Styles #}
{% if icon.disable %}
  %%SELECTOR%% .fs-counter-icon {
    display: none;
  }
{% endif %}

{% if icon.size %}
  %%SELECTOR%% .fs-counter-icon {
    width: {{ icon.size.style }};
    height: {{ icon.size.style }};
  }
{% endif %}

{% if icon.color %}
  %%SELECTOR%% .fs-counter-icon {
    color: {{ icon.color }};
  }
{% endif %}

{# Typography Styles #}
{% if typography.message %}
  %%SELECTOR%% .fs-counter-message {
    {{ typography.message.style }}
  }
{% endif %}

{% if typography.amount_color %}
  %%SELECTOR%% .fs-amount {
    color: {{ typography.amount_color }};
  }
{% endif %}

{% if typography.amount_weight %}
  %%SELECTOR%% .fs-amount {
    font-weight: {{ typography.amount_weight }};
  }
{% endif %}

{# Spacing #}
{% if design.spacing.margin_top %}
  %%SELECTOR%% {
    margin-top: {{ design.spacing.margin_top.style }};
  }
{% endif %}

{% if design.spacing.margin_bottom %}
  %%SELECTOR%% {
    margin-bottom: {{ design.spacing.margin_bottom.style }};
  }
{% endif %}
